@model IEnumerable<RegisterNewEmployee.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Companies</h2>

<p>
    @Html.ActionLink("Create New Company", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LegalForm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LegalForm)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ComID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ComID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ComID })
        </td>
    </tr>
}

</table>
